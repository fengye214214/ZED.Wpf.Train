<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    
    <!--Window样式-->
    <!--等待窗口阴影样式-->
    <DropShadowEffect x:Key="waitingWinBoxShadow" BlurRadius="15" Direction="-90" RenderingBias="Quality" ShadowDepth="2"/>
     
    <!--基本窗体样式-->
    <!--窗体背景色-->
    <SolidColorBrush x:Key="WindowBaseBackground" Color="Transparent"/>
    <!--窗体边框-->
    <SolidColorBrush x:Key="WindowBaseBorder" Color="#FF0562A9"/>
    <!--窗体边框阴影-->
    <DropShadowEffect x:Key="WindowDropShadow" BlurRadius="24" Color="#FF858484" Direction="90" ShadowDepth="3"/>

    <!--Region 文字图片-->
    <!--文字图片字体颜色-->
    <SolidColorBrush x:Key="TextForeground" Color="#3A3A3A"></SolidColorBrush>
    <!--EndRegion-->

    <!--Region Button基本样式-->
    <!--Button基本样式-->
    <FontFamily x:Key="ButtonFontFamily" >Microsoft YaHei</FontFamily>
    <SolidColorBrush x:Key="ButtonForeground" Color="White"></SolidColorBrush>
    <!--EndRegion-->
    
    <!--Region 圆角Button Button_CornerRadius-->
    <!--背景色-->
    <SolidColorBrush x:Key="ButtonCornerRadiusBG" Color="#FF0562A9"></SolidColorBrush>
    <!--鼠标悬浮背景色-->
    <SolidColorBrush x:Key="ButtonCornerRadiusMouseOverBG" Color="#0079d6"></SolidColorBrush>
    <!--EndRegion-->

</ResourceDictionary>